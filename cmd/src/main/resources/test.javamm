function main() {
	final a = 5
	println(factorialRecursive(a))
	println(factorialRecursive(a, 1))
	println(factorialIterative(a))
}

function factorialRecursive(value) {
	if(value <= 1) {
		return 1
	}
	else {
		return value * factorialRecursive(value - 1)
	}
}

function factorialRecursive(value, initResult) {
	if(value <= 1) {
		return initResult
	}
	else {
		final newInitResult = initResult * value
		return factorialRecursive(value - 1, newInitResult)
	}
}

function factorialIterative(value) {
	var result = 1
	for(var i = 1; i <= value; i++) {
		result *= i
	}
	return result
}